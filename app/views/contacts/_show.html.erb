<div id='contact'>
	
  <h2><%=@contact.CompanyName %>

 <small>  
 <%= link_to edit_contact_path(@contact),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#myContactForm'} do  %>
  <span class="glyphicon glyphicon-pencil"></span>
  <%end%>
	<%= link_to contact_path(@contact),
              method: :delete,
              data: { confirm: 'Are you sure?' } do%>
  <span class="glyphicon glyphicon-remove"></span>
  <%end%>
  </small>
  </h2>

  <div>
   
      <%= render @contact%>

      <span>
    <%= button_to 'New Job', new_jobnumber_path(@contact),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#myContactForm', :method => "get", "class" => "btn btn-primary"} %>
      </span>

      <div class="table-responsive">


        <table class="table table-hover">

        <tr>

        <th>Jobnumber</th>    
        <th>Project Name</th>          
        <th>Start Date</th>
        <th>Quote Number</th>
        </tr>

        <%= render @jobnumbers %>
        </table>


      </div>
      

 
  </div>
</div>   
