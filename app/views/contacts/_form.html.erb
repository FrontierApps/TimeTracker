<%= form_for @contact, remote: true do |f| %>
  <div class="modal-dialog" role="form">
    <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button><h4 class="modal-title" id="myModalLabel"><%= :title%></h4>
    </div>
      <div class="modal-body">

<% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@contact.errors.count, "error") %> prohibited
        this contact from being saved:
      </h2>
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="modalLeft">
    <p>
    <%= f.label :CompanyName %><br>
    <%= f.text_field :CompanyName %>
     <p>
      <%= f.label :Address %><br>
      <%= f.text_field :Address %><br>
      <%= f.text_field :Address1 %>
    </p>
    <p>
      <%= f.text_field :City ,:size=>20 %>
      <%= f.text_field :StateOrProvince ,:size=>2 %>
      <%= f.text_field :PostalCode ,:size=>5%>
    </p>
    <p>
      <%= f.label :WorkPhone %><br>
      <%= f.telephone_field(:WorkPhone) %>
    </p>
    <p>
      <%= f.label :FaxNumber %><br>
      <%= f.telephone_field(:FaxNumber) %>
    </p>
  </div>
    <div class="modalRight">
    <p>
      <%= f.label :FirstName %><br>
      <%= f.text_field :FirstName %>
    </p>    
    <p>
      <%= f.label :LastName %><br>
      <%= f.text_field :LastName %>
    </p>
    
  </div>
  </div>


<div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit ({ :class => 'btn btn-primary'})%>
        
</div>
</div>
</div>
<% end %>

